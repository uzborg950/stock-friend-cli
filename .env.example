# Stock Friend CLI Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================
# Market Data Gateway Configuration
# ============================================================

# Market data provider: 'yfinance' (default, no API key) or 'alpha_vantage' (requires API key)
MARKET_DATA_PROVIDER=yfinance

# Alpha Vantage API Key (only required if MARKET_DATA_PROVIDER=alpha_vantage)
# Get your free API key from: https://www.alphavantage.co/support/#api-key
MARKET_DATA_ALPHA_VANTAGE_API_KEY=your_api_key_here

# YFinance rate limit (requests per hour, default: 2000)
MARKET_DATA_YFINANCE_RATE_LIMIT=2000

# ============================================================
# Compliance Gateway Configuration
# ============================================================

# Compliance provider: 'zoya' or 'static' (default: static)
COMPLIANCE_PROVIDER=static

# ------------------------------------------------------------
# Zoya-Specific Configuration (only used if COMPLIANCE_PROVIDER=zoya)
# ------------------------------------------------------------

# Zoya API Key (sandbox key provided for development)
COMPLIANCE_ZOYA_API_KEY=your-environment-based-zoya-key

# Zoya Environment: 'sandbox' or 'live' (default: sandbox)
COMPLIANCE_ZOYA_ENVIRONMENT=sandbox

# Zoya API URL - Sandbox (default: https://api.zoya.finance/graphql)
COMPLIANCE_ZOYA_API_URL_SANDBOX=https://api.zoya.finance/graphql

# Zoya API URL - Live (default: https://api.zoya.finance/graphql)
# COMPLIANCE_ZOYA_API_URL_LIVE=https://api.zoya.finance/graphql

# Zoya Rate Limit: requests per second (default: 10)
# COMPLIANCE_ZOYA_REQUESTS_PER_SECOND=10

# Zoya Cache TTL in days (default: 30)
# COMPLIANCE_ZOYA_CACHE_TTL_DAYS=30

# ------------------------------------------------------------
# Static CSV Configuration (only used if COMPLIANCE_PROVIDER=static)
# ------------------------------------------------------------

# Path to compliance CSV file (default: data/compliance/halal_compliant_stocks.csv)
# COMPLIANCE_STATIC_DATA_FILE=data/compliance/halal_compliant_stocks.csv

# ============================================================
# Cache Configuration
# ============================================================

# Directory for cache storage (default: data/cache)
CACHE_DIR=data/cache

# Maximum cache size in MB (default: 500)
CACHE_SIZE_MB=500

# ============================================================
# Database Configuration
# ============================================================

# SQLite database file path (default: data/stock_cli.db)
DATABASE_PATH=data/stock_cli.db

# ============================================================
# Logging Configuration
# ============================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# ============================================================
# Rate Limiting Configuration
# ============================================================

# Requests per hour for Alpha Vantage API (default: 300)
# Free tier allows 5 requests per minute = 300 requests per hour
# Adjust based on your API tier
RATE_LIMIT_REQUESTS_PER_HOUR=300
